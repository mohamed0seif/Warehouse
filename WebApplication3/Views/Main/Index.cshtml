@model IEnumerable<WebApplication3.Models.Main>

@{
    ViewData["Title"] = "Index";
}

<h1>المخزن</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">اضافة جديدة</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameOperator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameVendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfKillos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remains)
            </th>
            <!--
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            -->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOperator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameVendor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfKillos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remains)
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                -->
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
